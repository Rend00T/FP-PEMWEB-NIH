{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "types": ["bun-types"],
    "importsNotUsedAsValues": "remove",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}